@page "{uid?}"
@{
	var playlists = (IEnumerable<Playlist>) ViewBag.Playlists;
}

@section Scripts {
    <script src="~/js/playlists_logo_filler.js"></script>
}

<div id="home-container">
    <!-- Playlists -->
    <div id="playlists-container" class="home-section">
        <h2>Vos playlists</h2>
        
        <div id="playlists-grid">
            <a class="playlist-block">
                <div class="playlist-logo"></div>
                <p class="playlist-title">Ajouter une playlist</p>
            </a>
            
            @foreach (var playlist in playlists)
            {
                <a class="playlist-block" asp-controller="Home" asp-action="Playlist" asp-route-pid="@playlist.playlist_id">
                    <div class="playlist-logo"></div>
                    <p class="playlist-title">@playlist.name</p>
                    <p class="playlist-desc">@playlist.description</p>
                </a>
            }
        </div>
        
        <a id="playlists-see-all" class="btn red hover-vertical-rec" href="#">
            <span>Voir tout</span>
        </a>
    </div>

